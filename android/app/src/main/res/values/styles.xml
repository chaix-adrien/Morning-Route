<resources>

    <!-- Base application theme. -->
   
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
  <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    <item name="android:spinnerStyle">@style/SpinnerAppTheme</item>
    <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemAppTheme</item>
  <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
</style>

<style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">>
  <item name="android:textSize">30dp</item>
</style>

<style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">>
    <item name="android:textColor">#000000</item>
      <item name="android:textSize">25dp</item>
    <item name="android:gravity">center</item>
</style>
 <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
      <item name="android:background">@drawable/mydivider</item>
      <item name="android:dropDownSelector">@drawable/mydivider</item>
  </style>

  <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
      <item name="android:checkMark">@drawable/mydivider</item>
  </style>
</resources>
